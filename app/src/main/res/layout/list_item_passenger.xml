<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/btndesign">

        <LinearLayout
            android:layout_below="@id/DriverNameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/usernamelayout"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username           :   "
                android:textStyle="bold"
                android:fontFamily="serif"/>
            <TextView
                android:hint="Username"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:id="@+id/tvpassname"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/useragelayout"
            android:orientation="horizontal"
            android:layout_below="@id/usernamelayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile No           :   "
                android:textStyle="bold"
                android:fontFamily="serif"/>

            <TextView
                android:layout_below="@+id/usernamelayout"
                android:textSize="15sp"
                android:hint="Mobile Number"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/tvPassMobNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/useridlayout"
            android:orientation="horizontal"
            android:layout_below="@id/useragelayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User ID                 :   "
                android:textStyle="bold"
                android:fontFamily="serif"/>

            <TextView
                android:layout_below="@id/useragelayout"
                android:textColor="@color/black"
                android:hint="User ID"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textSize="15sp"
                android:id="@+id/tvPassID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userpassword"
            android:orientation="horizontal"
            android:layout_below="@id/useridlayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password             :   "
                android:textStyle="bold"
                android:fontFamily="serif"/>

            <TextView
                android:layout_below="@id/useragelayout"
                android:textColor="@color/black"
                android:hint="Password"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textSize="15sp"
                android:id="@+id/tvPassPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <TextView
            android:layout_below="@id/userpassword"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:id="@+id/nthg"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nthg"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnpassDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:background="@drawable/btndesign"
                android:padding="5dp"
                />
            <Button
                android:id="@+id/btnpassEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:background="@drawable/btndesign"
                android:padding="5dp"
                />

        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>